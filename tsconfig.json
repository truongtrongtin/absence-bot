{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["./worker-configuration.d.ts"]
  },
  "include": ["src", "test"]
}
